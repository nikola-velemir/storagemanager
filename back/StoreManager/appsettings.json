{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "PostgresConnection": "Host=localhost;Port=5432;Database=warehouse_db;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  "TokenCleanupSettings": {
    "CleanupIntervalHours": 24
  },
  "JwtSettings": {
    "ExpiryIntervalInMinutes": 1,
    "Issuer": "storage_manager",
    "Audience": "app_storage_manager"
  },
  "RefreshTokenSettings": {
    "Length": 32,
    "ExpiryIntervalInDays": 2
  }
}
